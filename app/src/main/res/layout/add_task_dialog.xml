<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/conner_radius_top_left_top_right_16"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edtTitleTask"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/conner_radius_8dp"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:hint="@string/new_task"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|textCapSentences"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="#747373"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/background_date_time"
            android:elevation="1dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="12:50"
            android:textColor="#D13131"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/background_date_time"
            android:elevation="1dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="30/06/2023"
            android:textColor="#D13131"
            android:textSize="20sp" />


        <ImageButton
            android:id="@+id/btnDoneAddTask"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/conner_radius_20dp"
            android:elevation="1dp"
            android:src="@drawable/outline_download_done_black_24"
            tools:ignore="ContentDescription" />

    </LinearLayout>


</LinearLayout>